<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/DECORATION/1.4.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.4.0 http://maven.apache.org/xsd/decoration-1.4.0.xsd">

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.1</version>
    </skin>

    <body>

        <!-- Docs -->
        <menu name="Support &amp; Documentation">
            <item name="Getting Started !" href="getting-started.html"/>
        </menu>

        <!-- Maven Reports Menu -->
        <menu ref="reports" inherit="bottom" />
    </body>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <topBarContainerStyle>width: 90%;</topBarContainerStyle>
            <navBarStyle>navbar-inverse</navBarStyle>
            <sideBarEnabled>true</sideBarEnabled>
            <!--<googleSearch>-->
                <!--<sitesearch/>-->
            <!--</googleSearch>-->
            <!--<sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>-->
            <gitHub>
                <projectId>sydisnet/blog-samples/deltaspike-cdi-12</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>green</ribbonColor>
            </gitHub>
            <twitter>
                <user>sydisnet</user>
                <showUser>true</showUser>
                <showFollowers>true</showFollowers>
            </twitter>
            <facebookLike />
            <googlePlusOne />
        </fluidoSkin>
    </custom>
</project>
